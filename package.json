{
  "name": "nodetskeleton",
  "version": "1.0.0",
  "description": "A skeleton based to clean architecture for use typescript with NodeJs",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn -- src/index.ts",
    "test": "npm run build && jest --no-cache --detectOpenHandles --forceExit --coverage",
    "test:watch": "npm run build && jest --forceExit --detectOpenHandles --watchAll",
    "build": "rm -rf dist/* && tsc --sourceMap false",
    "up:build": "docker-compose up -d --build",
    "up": "docker-compose up -d",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "pretty-quick": "pretty-quick",
    "pretty-check": "pretty-quick --check",
    "pre-commit": "npm run lint && npm run pretty-quick --staged && npm run test",
    "start": "node dist/index"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harvic3/nodetskeleton"
  },
  "keywords": [
    "node",
    "ts",
    "skeleton",
    "nodejs",
    "typescript",
    "template",
    "clean architecture",
    "design patterns"
  ],
  "author": {
    "name": "Vickodev<Victor A. Higuita C.>",
    "email": "harvic3@protonmail.com",
    "url": "https://www.buymeacoffee.com/vickodev"
  },
  "license": "MIT",
  "homepage": "https://github.com/harvic3/nodetskeleton/blob/master/README.md",
  "engines": {
    "node": ">=16",
    "npm": ">=8.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^4.0.0",
    "@types/luxon": "^3.2.2",
    "@types/node": "^18.15.11",
    "@types/node-fetch": "^2.6.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "dic-tsk": "^1.0.3",
    "dotenv": "^16.0.3",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-router": "^12.0.0",
    "fast-glob": "^3.2.12",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "luxon": "^3.3.0",
    "mapper-tsk": "^2.0.2",
    "node-fetch": "^2.6.9",
    "resources-tsk": "^2.1.2",
    "result-tsk": "^2.1.3",
    "uuid": "^9.0.0",
    "validator-tsk": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
